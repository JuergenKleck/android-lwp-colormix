<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.simplyapps.lwp.colormix">

    <uses-feature android:name="android.software.live_wallpaper" />
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <service
            android:label="@string/app_name"
            android:name=".engine.ColorMixLWP"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
           <meta-data android:name="android.service.wallpaper" android:resource="@xml/colormix" />
       </service>
        <activity android:label="@string/app_name"
			android:name="info.simplyapps.lwp.colormix.ColorMixSettingsActivity"
			android:theme="@style/Theme.AppCompat"
			android:exported="true"
			android:icon="@mipmap/ic_launcher">
		</activity>
    </application>

</manifest>
